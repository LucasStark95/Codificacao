@model Model.Models.Usuario

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

<div class="container">    
    <div class="row">
        <div class="col-md-3">            
            
        </div>
        <div class="col-md-9">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.NomeUsuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NomeUsuario, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.MatriculaUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.MatriculaUsuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatriculaUsuario, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                   <div class="form-group">                       
                       @Html.LabelFor(model => model.Endereco, htmlAttributes: new { @class = "control-label col-md-2" })
                       <div class="col-md-4">
                           @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
                       </div>
                       @Html.LabelFor(model => model.NomeMae, htmlAttributes: new { @class = "control-label col-md-2" })
                       <div class="col-md-4">
                           @Html.EditorFor(model => model.NomeMae, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(model => model.NomeMae, "", new { @class = "text-danger" })
                       </div>
                       <div class="col-md-2"></div>
                    </div>
                    <div class="form-group">
                       
                        @Html.LabelFor(model => model.EmailUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.EmailUsuario, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EmailUsuario, "", new { @class = "text-danger" })
                        </div>
                        @Html.Label("Tipo de Usuário", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            Professor @Html.RadioButton("TipoUsuario", 1, new { htmlAttributes = new { @class = "form-control" } })
                            Técnico @Html.RadioButton("TipoUsuario", 2, new { htmlAttributes = new { @class = "form-control" } })
                            Aluno @Html.RadioButton("TipoUsuario", 3, true, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("TipoUsuario", "", new { @class = "text-danger" })

                        </div>                       
                        <div class="col-md-2"></div>
                    </div> 
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4"> </div>
                        <div class="col-md-2">
                            <input type="submit" value="Cadastrar" class="btn btn-default" />
                        </div>
                        <div class="col-md-2">
                            @Html.ActionLink("Cancelar", "Index", "", new { @class = "btn btn-default" })
                        </div>
                        <div class="col-md-4"> </div>
                    </div>
                </div>
              }

        </div>       
    </div>
</div>

